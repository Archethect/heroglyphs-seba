{
  "name": "@prb/foundry-template",
  "description": "Foundry-based template for developing Solidity smart contracts",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/PaulRBerg"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "solmate": "^6.8.0",
    "prettier-plugin-solidity": "^1.4.2"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "bun run lint:sol",
    "lint:sol": "prettier --check \"**/*.{sol,json,md,yml}\" --ignore-path \".prettierignore\" --plugin=prettier-plugin-solidity && bun solhint \"{script,src/{interfaces|lib|mocks|services},tests}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{sol,json,md,yml}\" --ignore-path \".prettierignore\" --plugin=prettier-plugin-solidity",
    "prettier:write": "prettier --write \"**/*.{sol,json,md,yml}\" --ignore-path \".prettierignore\" --plugin=prettier-plugin-solidity",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  }
}
